{{> header}}
<h2>Adicionar Postagem</h2>

<form method="POST">
    <label>
        <h2>Título:</h2>
        <input type="text" name="title"/>
    </label>
    <label>
        <h2>Corpo:</h2>
        <textarea name="body"></textarea>
    </label>
        <br/>
    <label>
        <h2>Tags:</h2><h3><i>Separar as Tags por vírgulas(,)</i><h3>
        <input type="text" name="tags" />
    </label>
        <br/>
        <input type="submit" value="Salvar" />
</form>