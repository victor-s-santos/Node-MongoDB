<html>
<head>
    <title>{{titulo}}</title>
    <link rel="stylesheet" href="/assets/css/styles.css" />
</head>
<body>
<header>
    {{#teste}}
    <h2>Cabeçalho: {{teste}}</h2>
    {{/teste}}
    {{^teste}}
    <h2>{{h.defaultTituloPagina}}</h2>
    {{/teste}}
    <h3>Bem vinda(o) ao padrão MVC</h3>
</header>
<ul>
    {{#h.menu}}
    <li><a href="{{slug}}">{{name}}</a></li>
    {{/h.menu}}
</ul>
<hr/>

{{#flashes}}
    {{#success}}
        <div class="messages">{{.}}</div>
    {{/success}}
    {{#info}}
        <div class="messages">{{.}}</div>
    {{/info}}
    {{#error}}
        <div class="messages">{{.}}</div>
    {{/error}}
    </div>
{{/flashes}}
