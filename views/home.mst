{{> header}}
<h1>{{titulo}}</h1>
<h2>Tags:</h2>
<div class="tags">
    {{#tags}}
        <div class="tag">{{_id}}({{counter}})</div> 
    {{/tags}}
</div>
    <h1>Postagens:</h1>
{{#posts}}
    <div class="post">
        {{#photo}}
        <img src="/media/{{photo}}" />
        {{/photo}}
        <h3><a href="/post/{{slug}}">{{title}}</a></h3>
        <p>{{body}}</p>
        <a href="/post/{{slug}}/edit"> [ editar ]</a>
    </div>
{{/posts}}